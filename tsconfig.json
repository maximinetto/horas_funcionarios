{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["ES6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["src/*"]
    },
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["src"]
}
