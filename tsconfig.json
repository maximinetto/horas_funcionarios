{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["ES6"],
    "module": "commonjs",
    "rootDir": "./src",

    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
