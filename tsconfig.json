{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["ES6"],
    "module": "commonjs",
    "rootDir": "./src",
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["./src/**/*"]
}
