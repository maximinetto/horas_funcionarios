{
  "name": "horas",
  "version": "1.0.0",
  "description": "Un proyecto para conteo de horas de funcionarios",
  "main": "index.js",
  "scripts": {
    "test": "npm run unit && npm run integration",
    "unit": "dotenv -e .env.test -- jest -c jest.config.unit.ts",
    "integration": "dotenv -e .env.test -- jest -c jest.config.integration.ts",
    "build": "rimraf dist && babel src --extensions .ts --out-dir dist --copy-files --no-copy-ignored ",
    "start": "npm run build && cross-env NODE_ENV=production node dist/index.js",
    "dev": "dotenv -e .env.development npm run watch",
    "watch": "ts-node-dev -r tsconfig-paths/register --transpile-only --respawn --watch --ignore-watch node_modules src/index.ts",
    "lint": "npm run lint:fix",
    "lint:fix": "eslint  . --fix",
    "format": "prettier --write .",
    "migrate:dev": "dotenv -e .env.development -- prisma migrate dev --name init",
    "migrate:test": "dotenv -e .env.test -- prisma migrate dev --name test-init"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "3.12.0",
    "cors": "2.8.5",
    "decimal.js": "10.3.1",
    "dotenv": "16.0.0",
    "express": "4.17.3",
    "joi": "17.6.0",
    "lodash": "4.17.21",
    "luxon": "2.3.1",
    "mysql": "2.18.1",
    "npm-run-all": "4.1.5",
    "prisma": "3.12.0",
    "typescript-optional": "^3.0.0-alpha.3",
    "winston": "3.7.2"
  },
  "devDependencies": {
    "@babel/cli": "7.17.6",
    "@babel/core": "7.17.5",
    "@babel/node": "7.16.8",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-typescript": "7.16.7",
    "@faker-js/faker": "6.1.2",
    "@types/cors": "2.8.12",
    "@types/express": "4.17.13",
    "@types/jest": "27.4.1",
    "@types/jest-when": "3.5.0",
    "@types/lodash": "4.14.181",
    "@types/luxon": "2.3.1",
    "@typescript-eslint/eslint-plugin": "5.18.0",
    "@typescript-eslint/parser": "5.18.0",
    "babel-jest": "27.5.1",
    "babel-loader": "8.2.3",
    "babel-plugin-module-resolver": "4.1.0",
    "cross-env": "7.0.3",
    "dotenv-cli": "5.1.0",
    "eslint": "8.13.0",
    "eslint-config-google": "0.14.0",
    "eslint-config-prettier": "8.4.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.5.1",
    "jest-mock-extended": "2.0.5",
    "jest-when": "3.5.1",
    "nodemon": "2.0.15",
    "nodemon-webpack-plugin": "4.7.1",
    "prettier": "2.6.2",
    "ts-jest": "27.1.4",
    "ts-node-dev": "1.1.8",
    "tsconfig-paths": "3.14.1",
    "typescript": "4.6.3"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  }
}
