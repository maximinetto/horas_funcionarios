{
  "name": "horas",
  "version": "1.0.0",
  "description": "Un proyecto para conteo de horas de funcionarios",
  "main": "index.js",
  "scripts": {
    "test": "dotenv -e .env.test jest -i",
    "build": "webpack --mode production",
    "start": "npm run build && cross-env NODE_ENV=production node dist/app.js",
    "dev": "dotenv -e .env.development npm run watch",
    "watch": "webpack --watch --mode development",
    "lint": "npm run lint:fix",
    "lint:fix": "eslint  . --fix",
    "format": "prettier --write .",
    "migrate:dev": "dotenv -e .env.development -- npx prisma migrate dev --name init",
    "migrate:test": "dotenv -e .env.test -- npx prisma migrate dev --name test-init"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "3.10.0",
    "dotenv": "16.0.0",
    "express": "4.17.3",
    "express-async-handler": "1.2.0",
    "joi": "17.6.0",
    "js-big-decimal": "1.3.4",
    "lodash": "4.17.21",
    "luxon": "2.3.1",
    "mysql": "2.18.1",
    "npm-run-all": "4.1.5",
    "winston": "3.6.0"
  },
  "devDependencies": {
    "@babel/core": "7.17.5",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-react": "7.16.7",
    "@faker-js/faker": "6.0.0-alpha.7",
    "babel-jest": "27.5.1",
    "babel-loader": "8.2.3",
    "copy-webpack-plugin": "10.2.4",
    "cross-env": "7.0.3",
    "dotenv-cli": "5.0.0",
    "eslint": "8.9.0",
    "eslint-config-google": "0.14.0",
    "eslint-config-prettier": "8.4.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.5.1",
    "jest-mock-extended": "2.0.4",
    "nodemon": "2.0.15",
    "nodemon-webpack-plugin": "4.7.1",
    "prettier": "2.5.1",
    "prisma": "3.10.0",
    "webpack": "5.69.1",
    "webpack-cli": "4.9.2",
    "webpack-dev-server": "4.7.4",
    "webpack-node-externals": "3.0.0"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  }
}
