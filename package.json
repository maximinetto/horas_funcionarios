{
  "name": "horas",
  "version": "1.0.0",
  "description": "Un proyecto para conteo de horas de funcionarios",
  "main": "index.js",
  "scripts": {
    "test": "npm-run-all unit integration",
    "test:watch": "npm-run-all --parallel unit:watch integration:watch",
    "unit:watch": "npm run unit -- --watchAll",
    "unit": "jest -c jest.config.unit.ts --logHeapUsage",
    "integration": "jest -c jest.config.integration.ts --logHeapUsage",
    "integration:watch": "npm run integration -- --watchAll",
    "build": "rimraf dist && babel . --ignore=node_modules,dist --extensions .ts --out-dir dist --copy-files --no-copy-ignored ",
    "build:swc": "npm run check && rimraf dist && npm run compile",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "dev": "dotenv -e .env.development npm run watch",
    "dev:swc": "dotenv -e .env.development npm run watch:swc",
    "watch": "ts-node-dev -r tsconfig-paths/register --transpile-only --respawn --watch --ignore-watch node_modules src/index.ts",
    "watch:swc": "npm run watch -- --swc",
    "compile": "swc src -d dist --sync",
    "compile:watch": "npm run compile -- -w",
    "check": "tsc --pretty --skipLibCheck --noEmit",
    "check:watch": "npm run check -- -w",
    "lint": "npm run lint:fix",
    "lint:fix": "eslint  . --ext=ts --fix",
    "format": "prettier --write .",
    "migrate:dev": "dotenv -e .env.development -- prisma migrate dev --name init",
    "migrate:test": "dotenv -e .env.test -- prisma migrate dev --name test-init"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "3.15.2",
    "cors": "2.8.5",
    "decimal.js": "10.3.1",
    "dotenv": "16.0.1",
    "express": "4.18.1",
    "joi": "17.6.0",
    "lodash": "4.17.21",
    "luxon": "2.4.0",
    "mysql": "2.18.1",
    "prisma": "3.15.2",
    "typescript-optional": "3.0.0-alpha.3",
    "winston": "3.8.0"
  },
  "devDependencies": {
    "@babel/cli": "7.17.10",
    "@babel/core": "7.18.5",
    "@babel/node": "7.18.5",
    "@babel/preset-env": "7.18.2",
    "@babel/preset-typescript": "7.17.12",
    "@faker-js/faker": "6.1.2",
    "@swc-node/register": "1.5.1",
    "@swc/cli": "^0.1.57",
    "@swc/core": "1.2.205",
    "@swc/helpers": "0.4.2",
    "@swc/jest": "0.2.21",
    "@types/cors": "2.8.12",
    "@types/express": "4.17.13",
    "@types/jest": "28.1.3",
    "@types/jest-when": "3.5.1",
    "@types/lodash": "4.14.182",
    "@types/luxon": "2.3.2",
    "@typescript-eslint/eslint-plugin": "5.29.0",
    "@typescript-eslint/parser": "5.29.0",
    "babel-jest": "28.1.1",
    "babel-loader": "8.2.5",
    "babel-plugin-module-resolver": "4.1.0",
    "cross-env": "7.0.3",
    "dotenv-cli": "5.1.0",
    "eslint": "8.18.0",
    "eslint-config-google": "0.14.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "jest": "28.1.1",
    "jest-mock-extended": "2.0.6",
    "jest-when": "3.5.1",
    "nodemon": "2.0.16",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "regenerator-runtime": "0.13.9",
    "ts-jest": "28.0.5",
    "ts-node": "10.8.1",
    "ts-node-dev": "2.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "4.7.4"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  }
}
